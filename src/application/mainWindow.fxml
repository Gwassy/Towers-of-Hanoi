<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.Scene?>

<Scene fx:controller="application.MainController"
       xmlns:fx="http://javafx.com/fxml"
       width="1100"
       height="600">
    <BorderPane>
        <bottom>
            <GridPane style=" -fx-border-color:red; -fx-border-width: 1; -fx-border-style: solid;">
                <padding>
                    <Insets left="70" right="70" bottom="50"/>
                </padding>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" prefWidth="100"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" prefWidth="100"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" prefWidth="100"/>
                </columnConstraints>
                <VBox GridPane.rowIndex="0" GridPane.columnIndex="0"
                      style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;"
                      alignment="CENTER">
                    <StackPane style=" -fx-border-color:blue; -fx-border-width: 1; -fx-border-style: solid;">
                        <Rectangle width="15" height="250"/>
                        <VBox fx:id="leftVBox"
                              style=" -fx-border-color:yellow; -fx-border-width: 1; -fx-border-style: solid;"
                              alignment="BOTTOM_CENTER">
                        </VBox>
                    </StackPane>
                    <Rectangle width="240" height="20" arcWidth="10" arcHeight="10" fill="forestgreen"/>
                </VBox>
                <VBox fx:id="middleVBox" GridPane.rowIndex="0" GridPane.columnIndex="1"
                      style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;"
                      alignment="CENTER">
                    <StackPane style=" -fx-border-color:blue; -fx-border-width: 1; -fx-border-style: solid;">
                        <Rectangle width="15" height="250"/>
                        <VBox style=" -fx-border-color:yellow; -fx-border-width: 1; -fx-border-style: solid;"
                              alignment="BOTTOM_CENTER">
                        </VBox>
                    </StackPane>
                    <Rectangle width="240" height="20" arcWidth="10" arcHeight="10" fill="forestgreen"/>
                </VBox>
                <VBox fx:id="rightVBox" GridPane.rowIndex="0" GridPane.columnIndex="2"
                      style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;"
                      alignment="CENTER">
                    <StackPane style=" -fx-border-color:blue; -fx-border-width: 1; -fx-border-style: solid;">
                        <Rectangle width="15" height="250"/>
                        <VBox style=" -fx-border-color:yellow; -fx-border-width: 1; -fx-border-style: solid;"
                              alignment="BOTTOM_CENTER">
                        </VBox>
                    </StackPane>
                    <Rectangle width="240" height="20" arcWidth="10" arcHeight="10" fill="forestgreen"/>
                </VBox>
            </GridPane>
        </bottom>
    </BorderPane>
</Scene>